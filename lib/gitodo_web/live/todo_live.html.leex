<form action="#" phx-submit="add">
    <%= text_input :todo, :title, placeholder: "What to do?" %>
    <%= submit "Add", phx_disable_with: "Adding..." %>
</form>

<%= for todo <- @todos do %>
    <%= checkbox(
        :todo, 
        :done,
        phx_click: "toggle_done", 
        phx_value_id: todo.id,
        value: todo.done
    ) %>
    <div><%= todo.title %></div>
<% end %>
